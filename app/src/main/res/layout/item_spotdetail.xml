<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:focusable="false"
        android:id="@+id/relative1"
        android:background="#ffffff">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/item_spotdetail_avatar"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/avatar_temp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/item_spotdetail_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/item_spotdetail_avatar"
            android:layout_alignTop="@+id/item_spotdetail_avatar"
            android:text="Small Text"
            android:textSize="17sp"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/item_spotdetail_txtrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_above="@+id/item_spotdetail_txtdate"
            android:layout_alignStart="@+id/item_spotdetail_username"
            android:text="GOOD"
            android:textSize="12sp"
            android:textColor="#008000"/>

        <TextView
            android:id="@+id/item_spotdetail_txtdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/item_spotdetail_username"
            android:layout_alignBottom="@+id/item_spotdetail_avatar"
            android:text="11/25"
            android:textSize="12sp"
            android:textColor="#000000" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_spotdetail_imgbrand"
        android:scaleType="fitXY"
        android:layout_below="@+id/relative1"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/item_spotdetail_txtcomment"
        android:layout_below="@+id/item_spotdetail_imgbrand"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#010101"
        android:layout_marginBottom="20dp" />
</RelativeLayout>
