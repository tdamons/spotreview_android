<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spotreview.fragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#008000">

            <ImageView
                android:id="@+id/iv_profile_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_menu"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="MY PROFILE"
                android:textSize="20dp"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:id="@+id/relativeLayout"
            android:layout_below="@+id/rl_title"
            android:background="#ffffff">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/myprofile_imgviewAvatar"
                android:src="@mipmap/avatar_temp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageView10"
                android:src="@mipmap/avatar_overlay_timeline"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp" />

            <Button
                android:id="@+id/myprofile_btnedit"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toEndOf="@+id/myprofile_imgviewAvatar"
                android:background="@drawable/editprofilebtn_custom"
                android:text="Edit"
                android:textColor="#BF0302"
                android:textSize="14dp" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:gravity="center_horizontal"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentTop="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timothy"
                android:id="@+id/myprofile_txtUserName"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Display Name:"
            android:id="@+id/textView5"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_below="@+id/linearLayout4"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="We"
            android:id="@+id/myprofile_txtDisplayName"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:textSize="16dp"
            android:textColor="#000000"
            android:textStyle="normal"
            android:layout_below="@+id/linearLayout4"
            android:layout_marginTop="15dp"
            android:layout_alignLeft="@+id/myprofile_txtUserSecQuestion" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="E-mail:"
            android:id="@+id/textView6"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_below="@+id/myprofile_txtDisplayName"
            android:textIsSelectable="false"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="We@hot.com"
            android:id="@+id/myprofile_txtUserEmail"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:textSize="16dp"
            android:textColor="#000000"
            android:textStyle="normal"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@+id/myprofile_txtUserSecQuestion" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Tel No:"
            android:id="@+id/textView8"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="5625622"
            android:id="@+id/myprofile_txtUserTelNumber"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:textSize="16dp"
            android:textColor="#000000"
            android:textStyle="normal"
            android:layout_below="@+id/myprofile_txtUserEmail"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@+id/myprofile_txtUserSecQuestion" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security Question:"
            android:id="@+id/textView10"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Pet name"
            android:id="@+id/myprofile_txtUserSecQuestion"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:textSize="16dp"
            android:textColor="#000000"
            android:textStyle="normal"
            android:layout_toLeftOf="@+id/textView10"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/myprofile_txtUserTelNumber"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/textView10" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Security Answer:"
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Tim"
            android:id="@+id/myprofile_txtUserSeqAnswer"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:textSize="16dp"
            android:textColor="#000000"
            android:textStyle="normal"
            android:layout_below="@+id/myprofile_txtUserSecQuestion"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@+id/myprofile_txtUserSecQuestion" />

    </RelativeLayout>

</FrameLayout>
